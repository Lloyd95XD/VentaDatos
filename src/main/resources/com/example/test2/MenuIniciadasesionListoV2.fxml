<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.ControladorVentanas">

    <children>
        <!-- Contenedor principal centrado -->
        <VBox alignment="CENTER">
            <children>
                <StackPane maxHeight="420.0" maxWidth="520.0">
                    <children>

                        <!-- Tarjeta principal -->
                        <Rectangle arcHeight="30.0" arcWidth="30.0" height="420.0" style="-fx-fill: rgba(15,22,40,0.95);" width="520.0">
                     <effect>
                        <Bloom />
                     </effect></Rectangle>

                        <!-- Contenido -->
                        <VBox alignment="TOP_CENTER" spacing="22.0">
                            <padding>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="24.0" />
                            </padding>
                            <children>

                                <!-- Fila superior: botón cerrar sesión alineado a la derecha -->
                                <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="220.0">
                                    <children>
                                        <Region prefHeight="33.0" prefWidth="354.0" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnCerrarSesion" onAction="#regresarmenuprincipal" prefHeight="33.0" prefWidth="151.0" style="-fx-background-color: #c94c4c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-padding: 8 18 8 18;" text="Cerrar sesión">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <effect>
                                    <Blend mode="RED" opacity="0.0" />
                                 </effect>
                              </Button>
                                    </children>
                                </HBox>

                                <!-- Título central -->
                                <VBox alignment="CENTER">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="Bienvenido" />
                                        <Label style="-fx-text-fill: #9faac7; -fx-font-size: 13px;" text="Selecciona una opción para continuar" />
                                    </children>
                                </VBox>

                                <!-- Botones principales -->
                                <VBox alignment="CENTER" spacing="14.0">
                                    <children>

                                        <Button maxWidth="260.0" onAction="#compraaaboton" style="-fx-background-color: #1391EB; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 0 10 0;" text="Menu Venta" />

                                        <Button maxWidth="260.0" onAction="#VerBoletas" style="-fx-background-color: #1391EB; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 12 10 12;" text="Ver historial de compras" wrapText="true" />
                              <Hyperlink fx:id="linkRegistroMuebles" onAction="#VentanaRegistroDeMuebles" text="Grafico de Ventas" />
                              <Hyperlink fx:id="linkRegistroUsuarios" layoutX="182.0" layoutY="163.0" onAction="#VerRegistrosUsuarios" text="Registro de usuarios" />
                              <Hyperlink fx:id="linkVerTablasMuebles" layoutX="182.0" layoutY="149.0" onAction="#VerTablasMuebles" text="Ver Tabla de muebles" />

                                    </children>
                                </VBox>

                            </children>
                        </VBox>

                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
