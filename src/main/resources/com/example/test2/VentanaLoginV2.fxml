<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.ControladorVentanas">

    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="460.0">
            <children>
                <StackPane maxHeight="420.0" maxWidth="380.0">
                    <children>

                        <!-- Fondo simple sin efectos -->
                        <Rectangle arcHeight="30.0" arcWidth="30.0" height="420.0" style="-fx-fill: rgba(15,22,40,0.95);" width="380.0" />

                        <VBox alignment="CENTER" spacing="18.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>

                                <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Gestor de Ventas" />

                                        <Label style="-fx-text-fill: #9faac7; -fx-font-size: 13px;" text="Inicia sesión para continuar" />
                              <Text fx:id="textoerror" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" />
                              <Text fx:id="textoerrorLogin" fill="WHITE" layoutX="180.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" />
                                    </children>
                                </VBox>

                                <VBox maxWidth="260.0" spacing="10.0">
                                    <children>

                                        <VBox spacing="4.0">
                                            <children>
                                                <Label style="-fx-text-fill: #c3c9dd; -fx-font-size: 12px;" text="Correo electrónico/Rut/telefono" />

                                                <TextField fx:id="txtnombrecuenta" promptText="ejemplo@correo.com" style="-fx-background-radius: 10; -fx-background-color: #1f2942; -fx-text-fill: white; -fx-prompt-text-fill: #6f7a96;" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="4.0">
                                            <children>
                                                <Label style="-fx-text-fill: #c3c9dd; -fx-font-size: 12px;" text="Contraseña" />

                                                <PasswordField fx:id="txtpassword2" promptText="Ingresa tu contraseña" style="-fx-background-radius: 10; -fx-background-color: #1f2942; -fx-text-fill: white; -fx-prompt-text-fill: #6f7a96;" />
                                            </children>
                                        </VBox>

                                        <HBox alignment="CENTER_RIGHT" />

                                    </children>
                                </VBox>

                                <Button fx:id="Iniciar" maxWidth="260.0" onAction="#iniciarSesion" style="-fx-background-color: linear-gradient(to right, #00c6ff, #0072ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 0 10 0;" text="Iniciar sesión" />

                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label style="-fx-text-fill: #9faac7; -fx-font-size: 12px;" text="¿No tienes cuenta?" />

                                        <Hyperlink fx:id="registro" onAction="#Registrarboton" style="-fx-text-fill: #5aa9ff; -fx-font-size: 12px;" text="Crear cuenta" />
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
