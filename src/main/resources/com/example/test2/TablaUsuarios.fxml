<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane prefHeight="720.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.AdminUsuariosController">

    <children>
        <VBox alignment="CENTER">
            <children>
                <!-- TARJETA AGRANDADA -->
                <StackPane maxHeight="600.0" maxWidth="1000.0">
                    <children>

                        <Rectangle arcHeight="28.0" arcWidth="28.0" height="600.0" style="-fx-fill: rgba(15,22,40,0.96);" width="1000.0">
                            <effect>
                                <Bloom />
                            </effect>
                        </Rectangle>

                        <BorderPane>
                            <padding>
                                <Insets bottom="24.0" left="32.0" right="32.0" top="24.0" />
                            </padding>

                            <!-- TOP -->
                            <top>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;" text="Usuarios" />

                                        <Region HBox.hgrow="ALWAYS" />

                                        <Button fx:id="salirboton1" onAction="#VolverMenu2" style="-fx-background-color: #c94c4c;                                                        -fx-text-fill: white;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 6;                                                        -fx-padding: 8 18;" text="Volver" />
                                    </children>
                                </HBox>
                            </top>

                            <!-- CENTRO (TABLA MÁS GRANDE) -->
                            <center>
                                <VBox spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: #9faac7; -fx-font-size: 14px;" text="Listado de usuarios" />

                                        <TableView fx:id="tablaUsuarios" prefHeight="420.0" prefWidth="936.0" style="-fx-background-color: transparent;                                                           -fx-control-inner-background: rgba(10,17,35,0.95);                                                           -fx-border-color: #1391EB;                                                           -fx-border-radius: 12;                                                           -fx-background-radius: 12;">
                                            <columns>
                                                <TableColumn fx:id="colRut" prefWidth="90" text="Rut" />
                                                <TableColumn fx:id="colNombre" text="Nombre" />
                                                <TableColumn fx:id="colApellido" prefWidth="110" text="Apellido" />
                                                <TableColumn fx:id="colEmail" prefWidth="110.0" text="Email" />
                                                <TableColumn fx:id="colTelefono" maxWidth="200.0" prefWidth="110" text="Teléfono" />
                                                <TableColumn fx:id="colFechaCreada" prefWidth="70.0" text="Fecha creación" />
                                                <TableColumn fx:id="colAdmin" prefWidth="70" text="Admin" />
                                                <TableColumn fx:id="colRol" prefWidth="110.0" text="Rol" />
                                                <TableColumn fx:id="colSucursal" prefWidth="120.0" text="Sucursal" />
                                    <TableColumn fx:id="colSuspendido" prefWidth="120.0" text="Estado Suspendido" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </center>

                            <!-- BOTTOM -->
                            <bottom>
                                <VBox spacing="14">
                                    <children>

                                        <!-- Usuario seleccionado -->
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label style="-fx-text-fill: #9faac7; -fx-font-size: 13px;" text="Usuario seleccionado:" />
                                                <Label fx:id="lblUsuarioSeleccionado" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="(ninguno)" />
                                            </children>
                                        </HBox>

                                        <!-- Mensaje -->
                                        <Label fx:id="lblMensaje" style="-fx-text-fill: #9faac7; -fx-font-size: 12px;" text="" />

                                        <!-- Rol / Sucursal / Botones -->
                                        <HBox alignment="CENTER_RIGHT" spacing="16">
                                            <children>

                                                <!-- Rol -->
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label style="-fx-text-fill: #d6def8; -fx-font-size: 13px;" text="Rol" />
                                                        <ComboBox fx:id="cbRol" opacity="0.66" prefWidth="180" style="-fx-background-radius: 8; -fx-background-color: #0A72C7; -fx-text-fill: white;" />
                                                    </children>
                                                </VBox>

                                                <!-- Sucursal -->
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label style="-fx-text-fill: #d6def8; -fx-font-size: 13px;" text="Sucursal" />
                                                        <ComboBox fx:id="cbSucursal" opacity="0.66" prefWidth="180" style="-fx-background-radius: 8; -fx-background-color: #0A72C7; -fx-text-fill: white;" />
                                                    </children>
                                                </VBox>

                                                <Region HBox.hgrow="ALWAYS" />

                                                <Button fx:id="btnAplicarCambios" onAction="#guardarCambiosRolSucursal" style="-fx-background-color: #1391EB;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-padding: 8 18;" text="Aplicar cambios" />
                                    <Button layoutX="684.0" layoutY="18.0" onAction="#SuspenderCuenta" style="-fx-background-color: #c94c4c;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-padding: 8 16;" text="Suspender Cuenta" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>
                            </bottom>

                        </BorderPane>

                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
