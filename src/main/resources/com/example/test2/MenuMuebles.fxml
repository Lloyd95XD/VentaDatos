<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.TablasTienda">

    <children>
        <!-- Contenedor principal centrado -->
        <StackPane maxHeight="520.0" maxWidth="780.0">
            <children>

                <!-- Tarjeta oscura -->
                <Rectangle arcHeight="28.0" arcWidth="28.0" height="520.0" style="-fx-fill: rgba(15,22,40,0.96);" width="780.0">
                    <effect><Bloom /></effect>
                </Rectangle>

                <BorderPane>
                    <padding>
                        <Insets bottom="18.0" left="24.0" right="24.0" top="20.0" />
                    </padding>

                    <!-- TOP: título + volver + monto total -->
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                            <children>
                                <Text style="-fx-fill: white;" text="Muebles">
                                    <font><Font size="26.0" /></font>
                                </Text>

                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Monto total -->
                                <Text fx:id="lblMontoTotal" style="-fx-fill: #37cf6b;" text="Monto Total $ 0">
                                    <font><Font size="16.0" /></font>
                                </Text>

                                <!-- Botón volver -->
                                <Button fx:id="btnVolver" onAction="#volverMenu1" style="-fx-background-color: #c94c4c;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-padding: 6 18;" text="Volver" />
                            </children>
                        </HBox>
                    </top>

                    <!-- CENTRO: productos + carrito -->
                    <center>
                        <HBox spacing="20.0">
                            <children>

                                <!-- COLUMNA IZQUIERDA: Productos + descripción -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Text style="-fx-fill: #9faac7;" text="Lista de productos">
                                            <font><Font size="14.0" /></font>
                                        </Text>

                                        <!-- Tabla de productos -->
                                        <TableView fx:id="tablaProductos" prefHeight="280.0" prefWidth="360.0" style="-fx-background-color: transparent;                                                           -fx-control-inner-background: rgba(10,17,35,0.95);                                                           -fx-border-color: #1391EB;                                                           -fx-border-radius: 10;                                                           -fx-background-radius: 10;">
                                            <columns>
                                                <TableColumn fx:id="colId" prefWidth="55.0" text="ID" />
                                                <TableColumn fx:id="colNombre" prefWidth="100.0" text="Nombre" />
                                                <TableColumn fx:id="colCategoria" prefWidth="90.0" text="Categoría" />
                                                <TableColumn fx:id="colCantidad" prefWidth="60.0" text="Stock" />
                                                <TableColumn fx:id="colPrecio" prefWidth="80.0" text="Precio" />
                                            </columns>
                                        </TableView>

                                        <!-- Descripción del producto -->
                                        <Text style="-fx-fill: #9faac7;" text="Descripción">
                                            <font><Font size="14.0" /></font>
                                        </Text>

                                        <TextArea fx:id="txtDescripcion" editable="false" prefHeight="90.0" prefWidth="360.0" style="-fx-background-radius: 10;                                                          -fx-control-inner-background: #111828;                                                          -fx-text-fill: #dce3ff;" wrapText="true" />
                                    </children>
                                </VBox>

                                <!-- COLUMNA DERECHA: Carrito -->
                                <VBox spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                                            <children>
                                                <Text style="-fx-fill: #9faac7;" text="Carrito">
                                                    <font><Font size="14.0" /></font>
                                                </Text>

                                                <Region HBox.hgrow="ALWAYS" />
                                    <Text layoutX="10.0" layoutY="28.0" style="-fx-fill: #9faac7;" text="Cantidad:">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Text>
                                    <TextField fx:id="colCantidadAdd" prefHeight="25.0" prefWidth="23.0" text="1" />

                                                <!-- Botón añadir al carrito (desde selección de la izquierda) -->
                                                <Button onAction="#agregarAlCarrito" style="-fx-background-color: #1391EB;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-padding: 4 10;" text="Añadir" />
                                            </children>
                                        </HBox>

                                        <!-- Tabla del carrito -->
                                        <TableView fx:id="tablaCarrito" prefHeight="280.0" prefWidth="320.0" style="-fx-background-color: transparent;                                                           -fx-control-inner-background: rgba(10,17,35,0.95);                                                           -fx-border-color: #1391EB;                                                           -fx-border-radius: 10;                                                           -fx-background-radius: 10;">
                                            <columns>
                                                <TableColumn fx:id="colCarritoNombre" prefWidth="150.0" text="Producto" />
                                                <TableColumn fx:id="colCarritoPrecio" prefWidth="80.0" text="Precio" />
                                                <TableColumn fx:id="colCarritoCantidad" prefWidth="86.0" text="Cant." />
                                            </columns>
                                        </TableView>

                                        <!-- Botones carrito -->
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button onAction="#eliminarDelCarrito" style="-fx-background-color: #c94c4c;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-padding: 6 12;" text="Eliminar" />

                                                <Button onAction="#vaciarCarrito" style="-fx-background-color: #c94c4c;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-padding: 6 12;" text="Vaciar" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                        </HBox>
                    </center>

                    <!-- BOTTOM: error + Ir a pagar -->
                    <bottom>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>

                                <!-- Mensaje error -->
                                <Text fx:id="textoerror" style="-fx-fill: #ff5959;" text="" wrappingWidth="400.0">
                                    <font><Font size="13.0" /></font>
                                </Text>

                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Botón ir a pagar -->
                                <Button fx:id="btnIrAPagar" onAction="#irAPagar" style="-fx-background-color: #4caf50;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 10;                                                -fx-padding: 8 18;" text="Ir a pagar" />
                            </children>
                        </HBox>
                    </bottom>

                </BorderPane>
            </children>
        </StackPane>
    </children>
</StackPane>
