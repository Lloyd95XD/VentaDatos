<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.BoletaController">

    <children>

        <!-- Tarjeta moderna -->
        <StackPane maxHeight="420" maxWidth="600">
            <children>

                <!-- Fondo tarjeta -->
                <Rectangle arcHeight="25" arcWidth="25" height="420" style="-fx-fill: rgba(15,22,40,0.96);" width="600">
                    <effect><Bloom /></effect>
                </Rectangle>

                <BorderPane>
                    <padding>
                        <Insets bottom="20" left="25" right="25" top="20" />
                    </padding>

                    <!-- TITULO SUPERIOR -->
                    <top>
                        <VBox alignment="CENTER">
                            <children>

                                <Text style="-fx-fill: white;" text="Compra realizada con éxito">
                                    <font><Font size="28" /></font>
                                </Text>

                                <Text style="-fx-fill: #9faac7;" text="Boleta:">
                                    <font><Font size="18" /></font>
                                </Text>

                            </children>
                        </VBox>
                    </top>

                    <!-- ÁREA DE LA BOLETA -->
                    <center>
                        <TextArea fx:id="txtBoleta" editable="false" prefHeight="290" prefWidth="380" style="                                       -fx-background-color: #0f1528;                                       -fx-control-inner-background: #0f1528;                                       -fx-text-fill: #dce3ff;                                       -fx-font-family: 'Consolas';                                       -fx-font-size: 14;                                       -fx-background-radius: 12;                                       -fx-padding: 12;" wrapText="true">
                        </TextArea>
                    </center>

                    <!-- ERROR + BOTÓN VOLVER -->
                    <bottom>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <children>

                                <!-- Texto error -->
                                <Text fx:id="textoerror" style="-fx-fill: #ff5959;" text="">
                                    <font><Font size="14" /></font>
                                </Text>

                                <!-- Botón volver -->
                                <Button onAction="#volveralmenu" style="-fx-background-color: #1391EB;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 10;                                                -fx-padding: 8 20;" text="Volver" />
                            </children>
                        </HBox>
                    </bottom>

                </BorderPane>

            </children>
        </StackPane>

    </children>

</StackPane>
