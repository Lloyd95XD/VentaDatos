<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.test2.ControladorVentanas"
            style="-fx-background-color: linear-gradient(to bottom, #0f172a, #020617);">

    <children>
        <!-- Centrar todo el contenido -->
        <StackPane AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <children>

                <!-- Tarjeta central -->
                <StackPane maxWidth="520.0" maxHeight="380.0">
                    <children>

                        <!-- Fondo de la tarjeta -->
                        <Rectangle width="520.0" height="380.0"
                                   arcWidth="26.0" arcHeight="26.0"
                                   style="-fx-fill: #020617;" />

                        <!-- Contenido -->
                        <VBox spacing="22.0" alignment="TOP_CENTER">
                            <children>

                                <!-- Fila superior: botón Cerrar sesión a la derecha -->
                                <HBox spacing="10.0" prefWidth="420.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="vovler"
                                                text="Cerrar sesión"
                                                onAction="#regresarmenuprincipal"
                                                style="-fx-background-color: #ef4444;
                                                       -fx-text-fill: white;
                                                       -fx-font-weight: bold;
                                                       -fx-background-radius: 999;
                                                       -fx-padding: 6 18 6 18;" />
                                    </children>
                                </HBox>

                                <!-- Título -->
                                <VBox alignment="CENTER" spacing="6.0">
                                    <children>
                                        <Text text="Bienvenido" fill="white">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="32.0" />
                                            </font>
                                        </Text>
                                        <Text text="Elige una opción para continuar" fill="#9ca3af">
                                            <font>
                                                <Font name="Segoe UI" size="13.0" />
                                            </font>
                                        </Text>
                                    </children>
                                </VBox>

                                <!-- Botones de acciones -->
                                <VBox spacing="12.0" alignment="CENTER">
                                    <children>

                                        <Button fx:id="comprabotoon"
                                                text="Comprar"
                                                onAction="#compraaa"
                                                prefWidth="260.0"
                                                style="-fx-background-color: #3b82f6;
                                                       -fx-text-fill: white;
                                                       -fx-font-weight: bold;
                                                       -fx-font-size: 14;
                                                       -fx-background-radius: 14;
                                                       -fx-padding: 10 0 10 0;" />

                                        <Button text="Ver historial de compras"
                                                onAction="#VerBoletas"
                                                prefWidth="260.0"
                                                wrapText="true"
                                                style="-fx-background-color: #111827;
                                                       -fx-text-fill: #e5e7eb;
                                                       -fx-font-size: 13;
                                                       -fx-background-radius: 14;
                                                       -fx-border-color: #374151;
                                                       -fx-border-radius: 14;
                                                       -fx-padding: 10 10 10 10;" />

                                        <Button fx:id="registrousuariooo"
                                                text="Registro de usuarios"
                                                onAction="#VerRegistrosUsuarios"
                                                prefWidth="260.0"
                                                wrapText="true"
                                                style="-fx-background-color: #111827;
                                                       -fx-text-fill: #e5e7eb;
                                                       -fx-font-size: 13;
                                                       -fx-background-radius: 14;
                                                       -fx-border-color: #374151;
                                                       -fx-border-radius: 14;
                                                       -fx-padding: 10 10 10 10;" />

                                    </children>
                                </VBox>

                            </children>
                        </VBox>

                    </children>
                </StackPane>

            </children>
        </StackPane>
    </children>
</AnchorPane>
