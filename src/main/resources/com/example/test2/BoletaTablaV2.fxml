<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.BoletaController">

    <children>
        <!-- Contenedor principal centrado -->
        <VBox alignment="CENTER">
            <children>
                <StackPane maxHeight="440.0" maxWidth="720.0">
                    <children>

                        <!-- Tarjeta oscura -->
                        <Rectangle arcHeight="28.0" arcWidth="28.0" height="440.0" style="-fx-fill: rgba(15,22,40,0.96);" width="720.0">
                            <effect>
                                <Bloom />
                            </effect>
                        </Rectangle>

                        <!-- Contenido de la tarjeta -->
                        <BorderPane>
                            <padding>
                                <Insets bottom="24.0" left="28.0" right="28.0" top="24.0" />
                            </padding>

                            <!-- Barra superior: título + botón volver -->
                            <top>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" text="Boletas" />

                                        <Region HBox.hgrow="ALWAYS" />

                                        <Button fx:id="volver" mnemonicParsing="false" onAction="#volveralmenu" style="-fx-background-color: #c94c4c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 18 8 18;" text="Volver" />
                                    </children>
                                </HBox>
                            </top>

                            <!-- Centro: tabla (izquierda) + boleta (derecha) -->
                            <center>
                                <HBox spacing="22.0">
                                    <children>

                                        <!-- Tabla de IDs de boleta -->
                                        <VBox spacing="6.0">
                                            <children>
                                                <Label fx:id="columnaID" style="-fx-text-fill: #9faac7; -fx-font-size: 13px;" text="ID Boletas" />

                                                <TableView fx:id="tablaBoletas" prefHeight="320.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-control-inner-background: rgba(10,17,35,0.9); -fx-background-insets: 0; -fx-border-color: #233952; -fx-border-radius: 10; -fx-background-radius: 10;">
                                                    <columns>
                                                        <TableColumn fx:id="colIdBoleta" prefWidth="157.0" text="ID" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>

                                        <!-- Área de texto con detalle de boleta -->
                                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label style="-fx-text-fill: #9faac7; -fx-font-size: 13px;" text="Detalle de la boleta" />

                                                <TextArea fx:id="txtBoleta" editable="false" prefHeight="320.0" style="-fx-control-inner-background: #111828; -fx-text-fill: #e0e6ff; -fx-font-family: 'Consolas'; -fx-font-size: 13px; -fx-background-radius: 14; -fx-padding: 12; -fx-background-color: #233952;" wrapText="true" VBox.vgrow="ALWAYS">
                                                </TextArea>
                                            </children>
                                        </VBox>

                                    </children>
                                </HBox>
                            </center>

                        </BorderPane>

                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
