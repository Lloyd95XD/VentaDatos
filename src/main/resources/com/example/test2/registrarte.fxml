<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.test2.ControladorVentanas"
            style="-fx-background-color: linear-gradient(to bottom, #041529, #03101f);">

    <children>
        <!-- Centrado general -->
        <StackPane AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">

            <children>

                <!-- Tarjeta central -->
                <VBox alignment="TOP_CENTER"
                      spacing="18.0"
                      maxWidth="720.0" maxHeight="460.0"
                      style="-fx-background-color: #020818; -fx-background-radius: 24;">
                    <padding>
                        <Insets top="24.0" right="32.0" bottom="24.0" left="32.0"/>
                    </padding>

                    <children>

                        <!-- Barra superior con botón Volver -->
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="vovler"
                                        text="Volver"
                                        onAction="#regresarmenuprincipal"
                                        style="-fx-background-color: #e15258;
                                               -fx-text-fill: white;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 999;
                                               -fx-padding: 6 22 6 22;"/>
                            </children>
                        </HBox>

                        <!-- Títulos -->
                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Text text="Registro de usuario" fill="white">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="26.0"/>
                                    </font>
                                </Text>
                                <Text text="Por favor rellene los datos" fill="#7f8ea3">
                                    <font>
                                        <Font name="Segoe UI" size="13.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <!-- Formulario -->
                        <GridPane hgap="22.0" vgap="14.0">
                            <padding>
                                <Insets top="14.0" right="0.0" bottom="0.0" left="0.0"/>
                            </padding>

                            <!-- Columna izquierda -->
                            <children>

                                <!-- Nombre -->
                                <Label text="Nombre"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <TextField fx:id="txtNombre"
                                           GridPane.rowIndex="1" GridPane.columnIndex="0"
                                           prefWidth="260.0"/>

                                <!-- Apellido -->
                                <Label text="Apellido"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <TextField fx:id="txtApellido"
                                           GridPane.rowIndex="3" GridPane.columnIndex="0"/>

                                <!-- Correo -->
                                <Label text="Correo electrónico"
                                       GridPane.rowIndex="4" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <TextField fx:id="txtCorreo"
                                           GridPane.rowIndex="5" GridPane.columnIndex="0"/>

                                <!-- Teléfono -->
                                <Label text="Número de teléfono"
                                       GridPane.rowIndex="6" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <TextField fx:id="txtTelefono"
                                           GridPane.rowIndex="7" GridPane.columnIndex="0"/>

                                <!-- Columna derecha -->

                                <Label text="RUT"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <TextField fx:id="txtRut"
                                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                                           prefWidth="260.0"/>

                                <Label text="Contraseña"
                                       GridPane.rowIndex="2" GridPane.columnIndex="1"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <PasswordField fx:id="txtPassword"
                                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Repetir contraseña"
                                       GridPane.rowIndex="4" GridPane.columnIndex="1"
                                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 13;"/>
                                <PasswordField fx:id="txtRepetirPassword"
                                               GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                            </children>
                        </GridPane>

                        <!-- Botón Registrar -->
                        <Button fx:id="Iniciar"
                                text="Registrarse"
                                onAction="#RegistroTablaUsuario"
                                prefWidth="220.0"
                                style="-fx-background-color: #1d4ed8;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 999;
                                       -fx-padding: 10 0 10 0;"/>

                        <!-- Mensaje de error -->
                        <Text fx:id="textoerror"
                              text=""
                              fill="#f97373"
                              textAlignment="CENTER"
                              wrappingWidth="420.0">
                            <font>
                                <Font name="Segoe UI" size="13.0"/>
                            </font>
                        </Text>

                    </children>
                </VBox>

            </children>
        </StackPane>
    </children>
</AnchorPane>
