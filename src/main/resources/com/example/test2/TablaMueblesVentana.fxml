<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.MueblesTablaController">

    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <children>
                <!-- Tarjeta central -->
                <StackPane maxHeight="480.0" maxWidth="820.0">
                    <children>

                        <Rectangle arcHeight="26.0" arcWidth="26.0" height="480.0" style="-fx-fill: rgba(15,22,40,0.96);" width="820.0" />

                        <VBox spacing="20.0">
                            <padding>
                                <Insets bottom="22.0" left="26.0" right="26.0" top="22.0" />
                            </padding>
                            <children>

                                <!-- Header -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Text fill="white" text="Gestión de muebles">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="26.0" />
                                            </font>
                                        </Text>

                                        <Region HBox.hgrow="ALWAYS" />

                                        <Button fx:id="btnVolverMuebles" onAction="#volverAlMenu" style="-fx-background-color: #e15258;                                                        -fx-text-fill: white;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 20 6 20;" text="Volver" />
                                    </children>
                                </HBox>

                                <!-- Subtítulo -->
                                <Text fill="#9faac7" text="Administra los muebles: agrega, edita o elimina registros">
                                    <font>
                                        <Font name="Segoe UI" size="13.0" />
                                    </font>
                                </Text>

                                <!-- Contenido principal: tabla + formulario -->
                                <BorderPane prefHeight="360.0">

                                    <!-- Tabla de productos -->
                                    <center>
                                        <TableView fx:id="tablaProductos" prefHeight="340.0" prefWidth="480.0" style="-fx-background-color: #020818;                                                           -fx-border-color: #1f2937;                                                           -fx-border-radius: 12;                                                           -fx-background-radius: 12;">
                                            <columns>
                                                <TableColumn fx:id="colIdProducto" prefWidth="60.0" text="ID" />
                                                <TableColumn fx:id="colCategoria" prefWidth="110.0" text="Categoría" />
                                                <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                                                <TableColumn fx:id="colStock" prefWidth="85.0" text="Stock" />
                                                <TableColumn fx:id="colPrecio" prefWidth="99.0" text="Precio" />
                                            </columns>
                                        </TableView>
                                    </center>

                                    <!-- Formulario lateral -->
                                    <right>
                                        <VBox prefWidth="260.0" spacing="10.0" BorderPane.alignment="CENTER">
                                            <padding>
                                                <Insets left="16.0" />
                                            </padding>
                                            <children>

                                                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 12;" text="Categoría" />
                                                <ComboBox fx:id="comboCategoria" prefWidth="220.0" />

                                                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 12;" text="Nombre" />
                                                <TextField fx:id="txtNombreProducto" prefWidth="220.0" />

                                                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 12;" text="Descripción" />
                                                <TextArea fx:id="txtDescripcionProducto" prefRowCount="3" prefWidth="220.0" style="-fx-font-size: 12;" wrapText="true" />

                                                <HBox spacing="10.0">
                                                    <children>
                                                        <VBox spacing="4.0">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 12;" text="Stock" />
                                                                <TextField fx:id="txtStockProducto" prefWidth="90.0" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="4.0">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 12;" text="Precio" />
                                                                <TextField fx:id="txtPrecioProducto" prefWidth="110.0" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>

                                                <!-- Botones de acción -->
                                                <HBox spacing="8.0">
                                                    <children>
                                                        <Button fx:id="btnNuevoProducto" prefWidth="70.0" style="-fx-background-color: #4b5563;                                                                        -fx-text-fill: white;                                                                        -fx-font-size: 11;                                                                        -fx-background-radius: 999;" text="Nuevo" />

                                                        <Button fx:id="btnGuardarProducto" prefWidth="80.0" style="-fx-background-color: #1391EB;                                                                        -fx-text-fill: white;                                                                        -fx-font-size: 11;                                                                        -fx-font-weight: bold;                                                                        -fx-background-radius: 999;" text="Guardar" />

                                                        <Button fx:id="btnEliminarProducto" prefWidth="80.0" style="-fx-background-color: #e15258;                                                                        -fx-text-fill: white;                                                                        -fx-font-size: 11;                                                                        -fx-background-radius: 999;" text="Eliminar" />
                                                    </children>
                                                </HBox>

                                            </children>
                                        </VBox>
                                    </right>

                                </BorderPane>

                            </children>
                        </VBox>

                    </children>
                </StackPane>

            </children>
        </StackPane>
    </children>
</AnchorPane>
