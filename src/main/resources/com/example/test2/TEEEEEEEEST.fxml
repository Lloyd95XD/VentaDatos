<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #041529, #03101f);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.BoletaController">

    <children>
        <!-- Centrar tarjeta -->
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <!-- Tarjeta central -->
                <VBox alignment="TOP_CENTER" maxHeight="440.0" maxWidth="780.0" spacing="18.0" style="-fx-background-color: #020818; -fx-background-radius: 24;">
                    <padding>
                        <Insets bottom="24.0" left="28.0" right="28.0" top="24.0" />
                    </padding>
                    <children>

                        <!-- Barra superior: Volver a la derecha -->
                        <HBox alignment="CENTER_RIGHT" prefWidth="724.0">
                            <children>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnVolver" style="-fx-background-color: #e15258;                                 -fx-text-fill: white;                                 -fx-font-weight: bold;                                 -fx-background-radius: 999;                                 -fx-padding: 6 22 6 22;" text="Volver" />
                            </children>
                        </HBox>

                        <!-- TÃ­tulo -->
                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Text fill="white" text="Boleta">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="30.0" />
                                    </font>
                                </Text>
                                <Text fill="#7f8ea3" text="Selecciona una boleta para ver su detalle">
                                    <font>
                                        <Font name="Segoe UI" size="13.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <!-- Contenido: tabla izquierda / detalle derecha -->
                        <HBox spacing="18.0">
                            <children>

                                <!-- Lado izquierdo: tabla de boletas -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Text fill="#7f8ea3" text="Boletas">
                                            <font>
                                                <Font name="Segoe UI" size="12.0" />
                                            </font>
                                        </Text>

                                        <TableView fx:id="tablaBoletas" prefHeight="300.0" prefWidth="170.0" style="-fx-background-color: #020818;                                                           -fx-border-color: #0f172a;                                                           -fx-border-radius: 12;                                                           -fx-background-radius: 12;">
                                            <columns>
                                                <TableColumn fx:id="colIdBoleta" prefWidth="166.0" style="-fx-background-color: #3C4B61;" text="ID" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Lado derecho: detalle de la boleta -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Text fill="#7f8ea3" text="Detalle de la boleta">
                                            <font>
                                                <Font name="Segoe UI" size="12.0" />
                                            </font>
                                        </Text>

                                        <TextArea fx:id="txtBoleta" prefHeight="300.0" style="-fx-control-inner-background: #020818; -fx-text-fill: #e5e7eb; -fx-highlight-fill: #3b82f6; -fx-border-color: #0f172a; -fx-border-radius: 12; -fx-background-radius: 12; -fx-font-family: 'Consolas'; -fx-font-size: 13;" wrapText="true">
                                        </TextArea>
                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </StackPane>
    </children>
</AnchorPane>
